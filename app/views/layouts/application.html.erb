<!DOCTYPE html>
<html>
  <head>
    <title>RankedChoice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <h1>12th District Forum</h1>
      <p class="lead">Baltimore City Council</p>
      <% if notice%>
        <p class="notice"><%= notice %></p>
      <% end%>
      <% if alert%>
        <p class="alert"><%= alert %></p>
      <% end%>
      
      <%= yield %>
    </div>
  </body>
</html>
